{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.30/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 3,
  "border": true,
  "border_width": 5,
  "border_offset": -1,
  "focus_follows_mouse": "Windows",
  "mouse_follows_focus": true,
  "theme": {
    "palette": "Base16",
    "name": "Darkviolet",
    "bar_accent": "Base04",
    "single_border": "Base04",
    "unfocused_border": "Base0E",
    "monocle_border": "Base0D"
  },
  "stackbar": {
    "height": 20,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "[1]COCKPIT 󰨇 ",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "id": "WindowsTerminal",
              "kind": "Title",
              "matching_strategy": "Contains"
            }
          ]
        },
        {
          "name": "[2]SOCIAL 󰠥 ",
          "layout": "Grid",
          "workspace_rules": [
            {
              "id": "X",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Bluesky",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Hachyderm.io",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "LinkedIn",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        },
        {
          "name": "[3]COMMUNITY 󰌓 ",
          "layout": "Grid",
          "workspace_rules": [
            {
              "id": "Discord.exe",
              "kind": "Exe"
            },
            {
              "id": "WhatsApp",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Telegram",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Microsoft Teams",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        },
        {
          "name": "[4]SUSE  ",
          "layout": "Grid",
          "workspace_rules": [
            {
              "id": "Slack.exe",
              "kind": "Exe"
            },
            {
              "id": "Gmail",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Google Calendar",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        },
        {
          "name": "[5]WRITING  ",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "id": "GitHub Desktop",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Code.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "[6]Learning  ",
          "layout": "Grid",
          "workspace_rules": [
            {
              "id": "O'Reilly",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        },
        {
          "name": "[7]MEDIA  ",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "id": "YouTube",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Spotify",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        },
        {
          "name": "[8]AI  ",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "id": "YouTube",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            },
            {
              "id": "Spotify",
              "kind": "Title",
              "matching_strategy": "StartsWith"
            }
          ]
        }
      ]
    }
  ]
}